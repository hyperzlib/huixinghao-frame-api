{
  "compilerOptions": {
    // General
    "jsx": "preserve",
    "target": "ES2020",
    "outDir": "dist",

    // Modules
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "bundler",

    // Declaration Files
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Type Checking & Safety
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}